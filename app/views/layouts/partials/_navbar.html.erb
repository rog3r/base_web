        </div>
    <% end %>
  </div>
</div>

<%= content_for :script do %>
    <%= javascript_tag do %>
        $(document).ready(function() {
        var items = $('.sort li').get();
        items.sort(function(a,b){
        var keyA = $(a).text();
        var keyB = $(b).text();
        if (keyA < keyB) return -1;
        if (keyA > keyB) return 1;
        return 0;
        });
        var ul = $('.sort');
        $.each(items, function(i, li){
        ul.append(li);
        });
        });
    <% end %>
<% end %>