                <span class="glyphicon glyphicon-user navbar-link" aria-hidden="true"></span>
                <span class="navbar-link">Bem vindo: </span> <%= link_to "#{current_user.name}", user_path(current_user), class: 'navbar-link', style: 'font-weight: bold;' %>
